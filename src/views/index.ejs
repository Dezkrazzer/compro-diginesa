            align-items: center;
            z-index: 1000;
            /* Transisi untuk transform DAN opacity */
            transition: transform 0.8s ease-out, opacity 0.8s ease-out, visibility 0s 0.8s;
            /* visibility berubah setelah transisi selesai */
            opacity: 1;
            transform: translateY(0);
            visibility: visible;
            /* Awalnya terlihat */
            pointer-events: auto;
            /* Awalnya bisa diklik */
        }

        #intro-logo {
            max-width: 50%;
            max-height: 50%;
            /* Transisi untuk transform DAN opacity */
            transition: transform 0.8s ease-out, opacity 0.8s ease-out;
            opacity: 1;
            /* Pastikan logo juga tidak memudar di awal */
        }

        /* Gaya saat logo intro menghilang dan navbar muncul */
        body.intro-hidden #intro-logo-container {
            transform: translateY(-100%);
            /* Geser ke atas */
            opacity: 0;
            /* Memudar */
            visibility: hidden;
            /* Sembunyikan setelah opacity 0 */
            pointer-events: none;
            /* Nonaktifkan interaksi */
        }

        body.intro-hidden #intro-logo {
            transform: scale(0.5);
            /* Mengecilkan logo */
            opacity: 0;
            /* Memudar logo */
        }

        body.intro-hidden #main-navbar {
