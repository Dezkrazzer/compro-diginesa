            const autoHideDelay = 1000; // 2 detik, sesuaikan
            const transitionDuration = 800; // Durasi transisi CSS (0.8s)

            setTimeout(() => {
                // Picu animasi intro menghilang
                body.classList.add('intro-hidden');

                // Setelah transisi selesai, lepaskan scroll dan hapus elemen intro
                setTimeout(() => {
                    body.classList.remove('no-scroll'); // Lepaskan kunci scroll
                    if (introLogoContainer) {
                        introLogoContainer.remove(); // Hapus elemen dari DOM
